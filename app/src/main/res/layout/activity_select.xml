<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_margin="40dp"
    tools:context="com.example.spikee.mad_cpu.Select">

    <android.support.v7.widget.CardView
        android:id="@+id/cv1"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/fcfs"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="#2d2d2d"
               android:scaleType="fitEnd" />
            <TextView
                android:id="@+id/title_fcfs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="FCFS"
                android:textColor="#000"
                android:textSize="17sp" />
            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cv2"
        android:layout_alignParentRight="true"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/sjf"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="#2d2d2d"
                android:scaleType="fitEnd" />
            <TextView
                android:id="@+id/title_sjf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="SJF"
                android:textColor="#000"
                android:textSize="17sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cv3"
        android:layout_below="@id/cv1"
        android:layout_centerHorizontal="true"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/basics"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="#2d2d2d"
                android:scaleType="fitEnd" />
            <TextView
                android:id="@+id/title_basics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="BASICS"
                android:textColor="#000"
                android:textSize="17sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cv4"
        android:layout_below="@id/cv3"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/priority"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="#2d2d2d"
                android:scaleType="fitEnd" />
            <TextView
                android:id="@+id/title_priority"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="PRIORITY"
                android:textColor="#000"
                android:textSize="17sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:id="@+id/cv5"
        android:layout_alignParentRight="true"
        android:layout_below="@id/cv3"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:layout_margin="5dp"
        app:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/rr"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:background="#2d2d2d"
                android:scaleType="fitEnd" />
            <TextView
                android:id="@+id/title_rr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:text="ROUND ROBIN"
                android:textColor="#000"
                android:textSize="17sp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>